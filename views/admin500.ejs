<style>
    .server-error-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh; /* Full viewport height */
      text-align: center;
      font-family: Arial, sans-serif;
      color: #333;
    }
    
    .error-code {
      font-size: 100px;
      font-weight: bold;
      color: #088178; /* Highlight with the specified color */
    }
    
    .error-message {
      font-size: 24px;
      margin: 20px 0;
      color: #555;
    }
    
    .back-home-btn {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 20px;
      font-size: 18px;
      color: #fff;
      background-color: #088178; /* Button with the specified color */
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }
    
    .back-home-btn:hover {
      background-color: #065d54; /* Slightly darker shade on hover */
    }
    
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
    }
